<tr>
<td width="300"><%=f.object.variant.product.name%> <%= "(" + variant_options(f.object.variant) + ")" unless f.object.variant.option_values.empty? %>
<%= render :partial => 'shared/additional_line_item_fields', :locals=>{:item => f.object} %>
<br/>
<%= mini_image(f.object.variant.product) %>
</td>
<td valign="top" class="price"><%= number_to_currency f.object.price %></td>
<td valign="top" class="qty"><%=f.text_field :quantity, :style => "width:30px;", :class => "qty" %></td>
<td valign="top" class="total"><%= number_to_currency (f.object.price * f.object.quantity)%></td>
<td data-hook="admin_order_form_line_item_actions">
    <%= link_to "certificate", admin_certificate_path(f.object.variant.product.permalink), :target => "_blank" %><br/>
    <%= link_to_delete f.object, {:url => admin_order_line_item_url(@order.number, f.object),
                                  :dataType => "html" ,
                                  :success => "function(r){ jQuery('#order-form-wrapper').html(r);}"},
                                  :title => "admin_delete_#{dom_id(@order)}" %>
                                  
  </td>
</tr>
